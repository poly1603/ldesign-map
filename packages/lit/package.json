{
  "name": "@ldesign-map/lit",
  "version": "3.0.0",
  "description": "Lit Web Components for ldesign-map",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "ldesign-builder build --watch",
    "build": "ldesign-builder build",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "rimraf dist es lib",
    "example": "pnpm --filter @ldesign-map/lit-example dev"
  },
  "dependencies": {
    "@ldesign-map/core": "workspace:*",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "link:../../../../tools/builder",
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json"
}



