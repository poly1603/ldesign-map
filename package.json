{
  "name": "@ldesign/map-renderer",
  "version": "3.0.0",
  "description": "A high-performance deck.gl-based map renderer with WebWorker, spatial indexing, animation batching, plugin system, and comprehensive testing",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "example": "cd example && npm run dev",
    "clean": "node -e \"const fs=require('fs');const path=require('path');const dir='dist';if(fs.existsSync(dir)){fs.rmSync(dir,{recursive:true,force:true});}\"",
    "prebuild": "npm run type-check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "deck.gl",
    "map",
    "geojson",
    "visualization",
    "3d",
    "heatmap",
    "clustering",
    "pathfinding",
    "measurement",
    "geospatial",
    "gis",
    "mapping",
    "data-visualization",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@deck.gl/core": "^9.0.0",
    "@deck.gl/layers": "^9.0.0",
    "@deck.gl/geo-layers": "^9.0.0",
    "@deck.gl/aggregation-layers": "^9.0.0"
  },
  "devDependencies": {
    "@deck.gl/core": "^9.0.0",
    "@deck.gl/layers": "^9.0.0", 
    "@deck.gl/geo-layers": "^9.0.0",
    "@deck.gl/aggregation-layers": "^9.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "happy-dom": "^12.10.0",
    "jsdom": "^23.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/map-renderer"
  },
  "bugs": {
    "url": "https://github.com/your-username/map-renderer/issues"
  },
  "homepage": "https://github.com/your-username/map-renderer#readme"
}